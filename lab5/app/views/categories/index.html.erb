<h1>Категорії</h1>
<%= link_to "Додати категорію", new_category_path, class: "btn btn-success mb-3" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Назва</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>
          <div class="d-flex gap-2">
            <%= link_to "Показати", category_path(category), class: "btn btn-dark btn-sm" %>
            <%= link_to "Редагувати", edit_category_path(category), class: "btn btn-warning btn-sm" %>
            <%= button_to "Видалити", category_path(category), method: :delete, data: { confirm: "Ви впевнені?" }, class: "btn btn-danger btn-sm" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
